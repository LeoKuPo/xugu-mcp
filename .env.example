# XuguDB MCP Server Configuration Example
# Copy this file to .env and update with your settings

# =============================================================================
# Database Connection Settings
# =============================================================================
XUGU_DB_HOST=localhost
XUGU_DB_PORT=5138
XUGU_DB_DATABASE=SYSTEM
XUGU_DB_USER=SYSDBA
XUGU_DB_PASSWORD=your_password_here
XUGU_DB_CHARSET=utf8
XUGU_DB_USESSL=off

# Connection Pool Settings
XUGU_DB_POOL_MIN_SIZE=2
XUGU_DB_POOL_MAX_SIZE=10
XUGU_DB_POOL_MAX_OVERFLOW=5
XUGU_DB_POOL_TIMEOUT=30

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Provider: claude, openai, zai, zhipu, local, ollama
LLM_PROVIDER=claude
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60

# =============================================================================
# Chat2SQL Settings
# =============================================================================
CHAT2SQL_ENABLE_SCHEMA_CACHE=true
CHAT2SQL_SCHEMA_CACHE_TTL=3600
CHAT2SQL_USE_EXAMPLES=true
CHAT2SQL_MAX_EXAMPLES=3
CHAT2SQL_ENABLE_VALIDATION=true
CHAT2SQL_ALLOW_DDL=true
CHAT2SQL_SUGGEST_OPTIMIZATIONS=true

# =============================================================================
# Security Settings
# =============================================================================
SECURITY_ENABLE_AUDIT_LOG=true
SECURITY_AUDIT_LOG_PATH=./logs/audit.log
SECURITY_RATE_LIMIT_ENABLED=false
SECURITY_RATE_LIMIT_MAX_QUERIES=100
SECURITY_MAX_QUERY_EXECUTION_TIME=300
SECURITY_RESULT_SET_MAX_ROWS=10000

# =============================================================================
# MCP Server Settings
# =============================================================================
MCP_SERVER_NAME=xugu-mcp-server
MCP_SERVER_VERSION=0.1.0
MCP_SERVER_LOG_LEVEL=INFO

# =============================================================================
# HTTP/SSE Server Settings (for HTTP mode)
# =============================================================================
# Server host (0.0.0.0 for all interfaces, localhost for local only)
HTTP_SERVER_HOST=0.0.0.0
HTTP_SERVER_PORT=8000

# CORS settings (set to true to enable cross-origin requests)
HTTP_SERVER_ENABLE_CORS=false
# HTTP_SERVER_CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# SSE endpoint paths (usually no need to change)
HTTP_SERVER_SSE_ENDPOINT=/sse
HTTP_SERVER_MESSAGE_ENDPOINT=/messages/

# Authentication (optional, set to true to enable)
HTTP_SERVER_ENABLE_AUTH=false
HTTP_SERVER_AUTH_TOKEN=your_auth_token_here
